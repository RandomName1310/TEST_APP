<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TEST_APP.Pages.SecondPage"
             BackgroundColor="Black">

    <!-- STYLE -->
    <ContentPage.Resources>
        <Style x:Key="GeneralButtonStyle" TargetType="Button">
            <Setter Property="Text" Value="Abrir Evento"/>
            <Setter Property="BackgroundColor" Value="Green"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="WidthRequest" Value="200"/>
            <Setter Property="Margin" Value="0,-20,0,0"/>
        </Style>

        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HeightRequest" Value="110"/>
        </Style>

        <Style x:Key="MainText" TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <Style x:Key="DateText" TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </ContentPage.Resources>


    <ScrollView>
        <VerticalStackLayout x:Name="EventStackLayout" Padding="10">
                <!-- Events added dynamically -->
        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
