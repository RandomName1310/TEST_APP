<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TEST_APP.Cards.EventManageCard">

    <!-- STYLE -->
    <ContentView.Resources>
        <Style x:Key="GeneralButtonStyle" TargetType="Button">
            <Setter Property="Text" Value="X"/>
            <Setter Property="BackgroundColor" Value="Red"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="WidthRequest" Value="200"/>
            <Setter Property="Margin" Value="0,-20,0,0"/>
        </Style>

        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HeightRequest" Value="110"/>
        </Style>

        <Style x:Key="MainText" TargetType="Label">
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <Style x:Key="DateText" TargetType="Label">
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </ContentView.Resources>

    <Border x:Name="MainBorder"
            BackgroundColor="{Binding color}"
            Style="{StaticResource BorderStyle}">
        <VerticalStackLayout Padding="10" Spacing="4">
            <Label Text="{Binding name}"
                   Style="{StaticResource MainText}"
                   HorizontalOptions="Start"/>

            <Label Text="{Binding date_time}"
                   Style="{StaticResource DateText}"
                   HorizontalOptions="Start"
                   VerticalOptions="End"/>

            <Button x:Name="GoToButton"
                    Style="{StaticResource GeneralButtonStyle}"
                    HorizontalOptions="End"
                    VerticalOptions="Start"
                    Clicked="ExitEvent"/>
        </VerticalStackLayout>
    </Border>
</ContentView>
